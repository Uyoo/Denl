    v-layout.tab-nav(align-center='', justify-center='')
        v-btn.py-2(flat, color='deep-orange darken-3', value='home', href='/')
            //span.caption Home
            v-icon.ma-0 home
        v-btn.py-2(flat='', color='deep-orange darken-3', value='find', href='/find')
