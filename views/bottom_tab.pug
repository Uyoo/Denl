v-dialog.md6(v-model='oneClickData.dialog',  scrollable, max-width='500px')
    v-card
        v-card-text.subheading.deep-orange.darken-3.white--text.text-xs-center.py-2(icon) 간편 유실물 등록
        v-card-text.pa-2
            form(action='/lost' method='post' enctype="multipart/form-data", id='image-form')
                input(id='file', type='file', name='file', @change='oneClick_imageChange()', accept="image/*" style='display: none;')
                v-layout(xs12, align-center)
                    v-flex(xs12, text-xs-center)
                        img.dal-image-card(:src='oneClickData.imgSrc', id='uploaded-img', width='50%', v-if='oneClickData.isFile')
        v-card-actions
            v-spacer
            v-btn(color='success', flat, @click="oneClick_reset()") 취소
            v-btn(color='info', flat, ) 제출

