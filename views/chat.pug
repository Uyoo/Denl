extends layout
block content

    include toolbar

    div(style='background-color: white; margin-top: 49px;')
        section(style='height: 100vh;')
            v-layout(wrap='', align-center='')
                v-flex(xs3='', sm3='', style='height: 100vh;')
                    v-list
                        v-subheader 채팅 목록
                        v-list-tile(v-for='item in chat_lists', :key='item.name', avatar='', v-on:click='ChatSelect(item), connect()')
                            v-list-tile-avatar
                                v-icon account_circle
                            v-list-tile-content
                                v-list-tile-title(v-text='item.name2')
                            v-list-tile-action(v-if='item.roomport == chat_clicked')
                                v-icon(color='teal') chat_bubble
                v-flex(xs9='', sm9='', style='height: 100vh; background-color: #f4f4f4;')
                    v-layout(wrap='')
                        // 채팅하고자 하는 사람
                        v-flex(xs12='', sm12='', mt-3='', px-3='')
                            template(v-for='item in chat_lists')
                                v-list-tile(v-if='item.roomport == chat_clicked', avatar='', ripple='', :key='item.roomport')
                                    v-list-tile-avatar
                                        v-icon account_circle
                                    v-list-tile-content
                                        v-list-tile-title {{item.name2}}
                        // 채팅창
                        v-flex(xs12='', sm12='', mt-0='')
                            v-container
                                v-card.scroll-y.elevation-2(style='height: 90%;')
                                    v-layout(wrap='')
                                        v-flex(xs12='', sm12='', pr-4='', text-xs-right='', style='height: 71vh;')
                                            v-list(subheader='', v-for='item in chat_lists', :key='item.roomport', v-if='item.roomport == chat_clicked')
                                                v-list-tile(avatar='', v-for='msg in item.msg')
                                                    v-list-tile-content(v-if="msg.stamp == sender")
                                                        //v-chip(color='deep-orange darken-3', text-color='white') {{ msg.sentence + " " + msg.stamp }}
                                                    v-list-tile-content(v-else)
                                                        v-chip(text-color='black') {{ msg.sentence }}
                                                    v-list-tile-action(v-if="msg.stamp == sender")
                                                        v-chip(color='deep-orange darken-3', text-color='white') {{ msg.sentence }}
                                            v-chip(v-if="message !==''", color='deep-orange darken-3', text-color='white') {{ message }}
                                v-card.elevation-2(style='margin-top: 0.5px; border-top: 1px solid #e7e7e7;')
                                    v-layout(wrap='')
                                        // 채팅 입력란
                                        v-flex(xs12='', sm12='', px-3='')
                                            // <textarea name="" v-model="message" placeholder="내용을 입력해주세요" style="width: 90%; height: 70%;"></textarea>
                                            //v-form(v-model='valid', ref='form', lazy-validation='', @submit="send()")
                                            v-layout(wrap='')
                                                v-flex(xs9='', sm11='')
                                                    v-text-field.transparent(flat='', solo='', label='내용을 입력해주세요.', v-model='message', v-on:keyup.enter='send()')
                                                v-flex(xs3='', sm1='', style='padding-top: 2px;')
                                                    v-btn.success(round='', v-on:click='send', style='min-width: 5%;') 전송

        include footer
        include bottom_tab


    script(type="text/javascript" src='/javascripts/chat-config.js')
    script.
        const vue = init('!{ChatData}');
